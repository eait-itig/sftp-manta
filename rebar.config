{erl_opts, [debug_info]}.
{plugins, [rebar3_hex]}.
{deps, [
  {lager, "3.8.0"},
  {gun, "1.3.0"},
  {http_signature, "2.0.0"},
  {jsx, "2.10.0"},
  {kerlberos, {git, "https://github.com/arekinath/kerlberos", {branch, "master"}}}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [sftp_manta]}
]}.
{sys_config, "config/sys.config"}.

{overrides, [
    %% Or for just one app:
    {del, http_signature, [{erl_opts, [warnings_as_errors]}]}
]}.
